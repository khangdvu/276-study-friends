<body style=" background-repeat: no-repeat; background-size:cover; background-image: url('https://www.sfu.ca/content/sfu/hire/recruit-with-career-services/jcr:content/main_content/textimage/image.img.1280.high.jpg/1384284236302.jpg');">


	<h1>Welcome to StuddyBuddy! </h1>

	<!-- Message for wrong email password combination-->
	<!-- fix to move flash notice elsewhere -->
	<% if flash[:notice] %>
    <div class="notice" style="color:red"><%= flash[:notice] %></div>
  	<% end %>



	<!--Login Form -->
	<div class="container" style="width: 20em; background-color: rgba(255,255,255,0.6); padding: 1em; border-radius: 20px;">
		<h2 style="color:#343a40; text-align: center;"> Sign In </h2>
		<br>
		<%= form_for(:session, url: login_path) do |f| %>
     	<%= f.label :email, class:"sr-only" %>
     	<%= f.email_field :email, class: 'form-control', placeholder: "Email Address" %>

     	<%= f.label :password, class: "sr-only" %>
     	<%= f.password_field :password, class: 'form-control', placeholder:"Password" %>

     	<%= f.submit "Log in", class: "btn btn-primary btn-primary btn-block" %>
    <% end %>


	<!--Link to Signup form -->
    <p style="text-align: center; color: #343a40; "> New user? <%= link_to "Sign up now!", signup_path %></p>

</body>