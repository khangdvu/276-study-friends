<head> Create Post </head>

<br><br><br>

<div class="container">
	<%= form_for :post, url: posts_path do |f| %>
		<p> 
			<%= f.label :course, class:"label" %> <br>
			<%= f.text_field :course, class:"form-control", placeholder:"e.g. CMPT276" %>
		</p>
		<p> 
			<%= f.label :content, class:"label" %> <br>
			<%= f.text_area :content, class:"form-control", placeholder: "preferred locations, time, and date" %>
		</p>

		<p>
			<%= f.submit "Save Post", class:"btn btn-primary", style: "float: right" %>
		</p>

	<% end %>

	<%= link_to 'Back to Posts', posts_path %>
</div>